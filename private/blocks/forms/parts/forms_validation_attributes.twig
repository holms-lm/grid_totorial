{% set text_error = {
    'required': 'Обязательное поле',
    'white-space-only': 'required',
    'minlength': 'Неверное количество символов',
    'email': 'email',
    'equal-to': 'equal_to',
    'only-ukraine': 'only_ukraine',
    'only-russian': 'only_russian',
    'only-english': 'only_english',
} %}
{% set value_reles = {
    'required': 'true',
    'white-space-only': 'true',
    'minlength': '18',
    'email': 'true',
    'equal-to': 'password',
    'only-ukraine': 'true',
    'only-russian': 'true',
    'only-english': 'true',
} %}
{% if types_errors is defined %}
    {% for type_error in types_errors %}
        data-error-{{ type_error }} = "{{ attribute(text_error, type_error) }}"
        data-valid-{{ type_error }} = "{{ attribute(value_reles, type_error) }}"
    {% endfor %}
{% endif %}

