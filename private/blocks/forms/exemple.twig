<div class="js--server_message"></div>
<div id="form_success" class="alert-success p-4 d-none">Успешно отправлена!</div>
<button id="add_button">Дополнительная кнопка</button>
<form class="user js--validate_form" data-send-type="ajax" action="/send" method="get"
      data-place_server_message=".js--server_message"
      data-id_target="copy_form"
      data-id_message_success="form_success"
      data-button-id="add_button"
      data-lock-class="js--form_lock"
>
{# С атрибутом data-send-type="ajax" отправляется через $.ajax#}
  <fieldset class="js--form_lock" disabled>
  <div class="form-group">
    {% set element %}
    {#js--phone - маска ввода телефона#}
      <input type="text" class="form-control form-control-user js--phone" name="phone"
        {% include 'parts/forms_validation_attributes.twig' with {'types_errors': ['required', 'white-space-only', 'minlength']} %}>
    {% endset %}
    {% include 'parts/forms_element/forms_element.twig' with { 'element': element, 'label': 'Телефон' } %}
  </div>
  <div class="form-group">
    {% set element %}
      <input type="password" class="form-control form-control-user" name="_password"
        {% include 'parts/forms_validation_attributes.twig' with {'types_errors': ['required', 'white-space-only']} %}>
    {% endset %}
    {% include 'parts/forms_element/forms_element.twig' with { 'element': element, 'label': 'Пароль' } %}
  </div>
  <div class="d-flex justify-content-between align-items-baseline">
    <div class="form-group">
      <div class="custom-control custom-checkbox small">
        <input type="checkbox" class="custom-control-input" name="_remember_me" id="remember_me">
        <label class="custom-control-label"
               for="remember_me">Запомнить меня</label>
      </div>
    </div>
    <div class="form-group">
      <label><a class="sb_link" href="#">
          Забыли пароль?
        </a></label>
    </div>
  </div>
  <button type="submit" class="btn btn-primary btn-user btn-block position-relative text-lg">
    {% include '../../components/preloader/preloader.twig' %}
    <span class="text-lg">Отправить</span>
  </button>
  </fieldset>
</form>
<div id="copy_form"></div>
